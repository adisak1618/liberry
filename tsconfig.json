{
   "compilerOptions": {
      "lib": [
         "dom",
         "es6",
         "es2017",
         "esnext.asynciterable"
      ],
      // "baseUrl": "./",
      "rootDir": "src",
      "allowJs": true,
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules",
      "public"
   ]
}